@using CursusAdministratie2021.Client.Core.Interfaces
@using CursusAdministratie2021.Shared.DTO
@using CursusAdministratie2021.Shared.Interfaces
@using CursusAdministratie2021.Shared.Models
@inject ICoursesOverviewService coursesOverviewService

@if (Student is not null ) {
    <section class="form">
        <label class="form__label">Naam</label>
        <span>@Student.Name</span>
        <label class="form__label">Achternaam</label>
        <span>@Student.Surname</span>
    @if (Student is CompanyEmployee companyEmployee) {
        <label class="form__label">Bedrijfsnaam</label>
        <span>@companyEmployee.Company</span>
        <label class="form__label">Afdeling</label>
        <span>@companyEmployee.Department</span>
        <label class="form__label">Offertenummer</label>
        <span>@companyEmployee.Quotation</span>
    } else if(Student is PrivateCitizen privateCitizen){
        <label class="form__label">Straatnaam</label>
        <span>@privateCitizen.StreetName</span>
        <label class="form__label">Huisnummer</label>
        <span>@privateCitizen.HouseNumber</span>
        <label class="form__label">Postcode</label>
        <span>@privateCitizen.ZipCode</span>
        <label class="form__label">Woonplaats</label>
        <span>@privateCitizen.City</span>
        <label class="form__label">IBAN</label>
        <span>@privateCitizen.IBAN</span>
    }
    </section>
}

@code {
    [Parameter]
    public Student Student { get; set; }
}